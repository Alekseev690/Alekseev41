<Page x:Class="Alekseev41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alekseev41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="1">
            <TextBlock Text="Логин" FontSize="25" Height="30" Width="200"></TextBlock>
            <TextBox Name="LoginTB" TextChanged="Login_TextChanged" Height="25" Width="200"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBlock Text="Пароль" FontSize="25" Height="30" Width="200"></TextBlock>
            <TextBox Name="PassTB" TextChanged="Pass_TextChanged" Height="25" Width="200"></TextBox>
        </StackPanel>

        <Button Name="LogingGuestButton" Content="Войти как гость" HorizontalAlignment="Center" Grid.Row="3" Click="LogingGuest_Click"></Button>
        <Button Name="LoginButton" Content="Войти" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="3" Click="LoginButton_Click"></Button>
    </Grid>
</Page>
